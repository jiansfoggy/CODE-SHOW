// circle maker is easier that i thought
Command CirclePixels CX CY DX DY V
{
  Set [(CX+DX) (CY+DY)] V
  Set [(CX+DX) (CY-DY)] V
  Set [(CX-DX) (CY+DY)] V
  Set [(CX-DX) (CY-DY)] V
  Set [(CX+DY) (CY+DX)] V
  Set [(CX+DY) (CY-DX)] V
  Set [(CX-DY) (CY+DX)] V
  Set [(CX-DY) (CY-DX)] V
}
Command Circle CS CY Radius V
{
  Set X 0
  Set Y Radius
  Set D (1-Radius)
  CirclePixels CS CY X Y V
  // 707/1000 approximates
  // square root of 0.5 = cos(45)
  Repeat X 0 (Radius*707/1000)
  {
    Set TempD D
    Smaller? TempD 0
    {
      Set D (D+(2*X)+3)
    }
    NotSmaller? TempD 0
    {
      Set D (D+(2*(X-Y))+5)
      Set Y (Y-1)
    }
    CirclePixels CS CY X Y V
  }
}
